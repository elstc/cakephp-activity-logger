{
    "name": "elstc/cakephp-activity-logger",
    "description": "ActivityLogger plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": ["MIT"],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-pdo": "*",
        "cakephp/cakephp": "^4.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "cakephp/authentication": "^2.0",
        "cakephp/cakephp-codesniffer": "^4.6",
        "cakephp/migrations": "^3.0",
        "phpunit/phpunit": "^8.5 || ^9.3"
    },
    "autoload": {
        "psr-4": {
            "Elastic\\ActivityLogger\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elastic\\ActivityLogger\\Test\\": "tests",
            "TestApp\\": "tests/test_app/TestApp",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "cs-check": "phpcs -p --extensions=php --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests",
        "cs-fix": "phpcbf -p --extensions=php --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests",
        "update-lowest": "composer update --prefer-lowest --prefer-stable"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
